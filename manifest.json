{
    "manifest_version": 3,
    "name": "Anti-Adblock Detector",
    "version": "1.1",
    "description": "Detects if an adblocker is active on any website.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    }
  }
  